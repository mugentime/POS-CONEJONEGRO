{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch POS Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "*"
            },
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Launch POS Server (Development)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "args": ["server.js"],
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Debug Database Setup",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/initDatabase.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Attach to Running Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }
    ]
}